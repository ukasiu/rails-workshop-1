<%= form_for @book do |f|%>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title%>
  <%= f.text_field :title%></br>

  <%= f.label :isbn%>
  <%= f.text_field :isbn%></br>

  <%= f.label :label_id%>
  <%= f.text_field :label_id%></br>

  <%= f.label :publisher %>
  <%= f.select :publisher_id, Publisher.all.collect {|p| [ p.name, p.id ] }, { include_blank: true } %>
  </br>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %>
  </br>

  <%= f.collection_select :author_ids, Author.all, :id, :name, {}, multiple: true %>
  <br/>
  <%= f.submit%>
<%end%>